<div class="container" style="margin:100px">
  <div class="row">
    <div class="col">
      <p class="text-end">
        <span>Hola {{persona}}!</span>
        <a href="/admin/login/logout" class="btn btn-danger">
          Cerrar session
          <i class="fa fa-sign-out" aria-hidden="true"></i></a>
      </p>
    </div>
  </div>
  <div class="row">
    <div class="col-6" style="margin-top: -9px;">
      <h2>Listado de Novedades</h2>
    </div>
    <div class="col-2 text-end">
      <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i>
        Nuevo</a>
    </div>
    <div class="col-3 text-end">
      <form class="form-inline" action="/admin/novedades" method="get">
        <input class="form-control" type="search" placeholder="Buscar" aria-label="Search" name="q" {{#if q}}
          value="{{q}}" {{/if}} />
    </div>
    <button class="btn btn-secondary col-1" type="submit">
      <i class="fa fa-search" aria-hidden="true"></i>
    </button>
    </form>



  </div>

  <div class="row">
    <div class="col">
      <table class="table">
        <thead>
          <tr class="thead-dark">
            <th scope="col">#</th>
            <th scope="col">Titulo</th>
            <th scope="col">Imagen</th>
            <th scope="col" class="text-center">Acciones</th>
          </tr>
        </thead>
        <tbody>
          {{#each novedades}}
          <tr>
            <th scope="row">{{id}}</th>
            <td>{{titulo}}</td>
            <td>{{{imagen}}}</td>
            <td class="text-center">
              <a href="/admin/novedades/modificar/{{id}}" class="btn btn-sm btn-secondary">
                <i class="fa fa-pencil-alt"></i></a>
              <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-sm btn-secondary"><i
                  class="fa fa-trash"></i></a>
            </td>
          </tr>

          {{/each}}
        </tbody>
      </table>
      {{#if is_search}}
      {{#unless novedades.length}}
      No se encontraron resultados para "<b>{{q}}</b>"
      {{/unless}}
      {{/if}}
    </div>
  </div>

</div>