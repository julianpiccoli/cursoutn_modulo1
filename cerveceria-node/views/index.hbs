    <div class="row my-3">
        <div id="novedades" class="col-md-5 offset-md-2 col-xs-12 offset-1 scroll_section">
            <h2>Novedades</h2>
            <ul class="lista-novedades">
                {{#each novedades}}
                <li><a href="#" data-bs-toggle="modal" data-bs-target="#exampleModal{{id}}"><img
                            src="img/novedades01.jpg">{{titulo}}</a></li>
                {{/each}}
            
            </ul>
        </div><!--cierra novedades-->
        <!--modal-->

        <!-- Modal -->
        {{#each novedades}}
        <div class="modal fade" id="exampleModal{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">{{titulo}}</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <h3>{{subtitulo}}</h3>
                        <p>{{cuerpo}}</p>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
